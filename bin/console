#!/usr/bin/env bash

cd "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)"/../

case "$1" in
    "setup")
        bundle install
        yarn install ;;
    "serve")
        bundle exec jekyll serve ;;
    "clean")
        rm -f yarn.lock
        rm -f Gemfile.lock
        rm -rf .jekyll-cache/
        rm -rf node_modules/
        rm -rf _site/ ;;
    *) exit -1 ;;
esac
