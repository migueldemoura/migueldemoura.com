#!/usr/bin/env bash

cd "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)"/../

case "$1" in
    "setup")
        bundle install
        npm install ;;
    "serve")
        bundle exec jekyll serve ;;
    "clean")
        rm -f package-lock.json Gemfile.lock
        rm -rf .jekyll-cache/ node_modules/ _site/ ;;
    *) exit -1 ;;
esac
